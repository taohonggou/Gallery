﻿<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 美图网</title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/layout/style.css" rel="stylesheet" />
    <script src="~/Scripts/layer9.1/layer.js"></script>

    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
    </script>

    <!-- start-smoth-scrolling -->
    <script src="~/Scripts/layout/move-top.js"></script>
    <script src="~/Scripts/layout/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1000);
            });
            //回到顶部的js
            $(window).scroll(function () {
                if ($(window).scrollTop() > 1000)
                    $('div.go-top').show();
                else
                    $('div.go-top').hide();
        });
            $('div.go-top').click(function () {
                $('html, body').animate({ scrollTop: 0 }, 1000);
            });
        });
    </script>
    <!-- //end-smoth-scrolling -->
    <!--pop-up-box-->

    <script src="~/Scripts/layout/modernizr.custom.53451.js"></script>
    <link href="~/Content/layout/popup-box.css" rel="stylesheet" />
    <script src="~/Scripts/layout/jquery.magnific-popup.js"></script>
    <!--pop-up-box-->
    <!--回到顶部样式-->
    <style type="text/css">
        div.go-top {
            display: none;
            opacity: 0.6;
            z-index: 999999;
            position: fixed;
            bottom: 16px;
            right:16px;
            margin-left: 40px;
            /*border: 1px solid #a38a54;*/
            width: 50px;
            height: 50px;
            background-color: #ddd;
            /*border-radius: 3px;*/
            cursor: pointer;
        }

            div.go-top:hover {
                opacity: 1;
                filter: alpha(opacity=100);
            }

            div.go-top div.arrow {
                position: absolute;
                left: 10px;
                top: -7px;
                width: 0px;
                height: 0px;
                border: 15.5px solid transparent;
                border-bottom-color: #428bca;
            }

            div.go-top div.stick {
                position: absolute;
                left: 18.5px;
                top: 23px;
                width: 13px;
                height: 17px;
                display: block;
                background-color: #428bca;
                -webkit-border-radius: 1px;
                -moz-border-radius: 1px;
                border-radius: 1px;
            }
    </style>
</head>

<body>
    <!--header start here-->
    <div class="header">
        
        <div class="container">
