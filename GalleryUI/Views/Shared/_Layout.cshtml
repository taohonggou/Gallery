    </div>
    <!--header end here-->
    @RenderBody()
    <!--footer start here-->
    <div class="footer">
        <div class="container">
            <div class="footer-main">
                <p>Copyright &copy; 2015.ChenLiang All rights reserved.</p>
            </div>
        </div>
    </div>
    <!--footer end here-->
