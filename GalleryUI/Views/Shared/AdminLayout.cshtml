<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/layer9.1/layer.js"></script>
</head>
<body>
    <nav class="navbar navbar-default" role="navigation">
        <div class="navbar-header" style="margin-left:20%;">
            <a class="navbar-brand" href="#">相册</a>
        </div>
        <div class="pull -right" style="float: right;margin-right: 20%;">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">登录</a></li>
                <li><a href="#">退出</a></li>
            </ul>
        </div>
    </nav>
    <div class="panel-group pull-left" id="accordion" style="position:absolute;margin-left:20%;width:10%;">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion"
                       href="#collapseOne">
                        用户中心
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
                <div>
                    <a href="/AdminUserInfo/index" class="list-group-item">用户管理</a>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion"
                       href="#collapseTwo">
                        照片中心
                    </a>
                </h4>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse">
                <div>
                    <a href="/AdminPhoto/Index?pageindex=1" class="list-group-item">照片管理</a>
                    <a href="#" class="list-group-item">评论管理</a>
                    <a href="#" class="list-group-item">点赞记录</a>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    <div class="pull-right" style="margin-bottom:50px;width:49%;margin-right:20%;">
        @RenderBody()
    </div>
</body>
</html>
