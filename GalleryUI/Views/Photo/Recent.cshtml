    function loadPhotos(index, size) {
        $.ajax({
            url: '/Photo/GetRecentPhotos',
            type: 'post',
            data: { pageIndex: index, pageSize: size },
            success: function (data) {
                if (data.StatusCode == 1) {
                    initPhotos(data.Data.List)
                } else
                    layer.msg(data.Message);
            }
        });
    }

    function initPhotos(json) {
        var str = '';
        $.each(json, function () {
            str += '<div class="col-md-3 pa-more"><a href="javascript:;" class="thickbox play-icon popup-with-zoom-anim"><div class="work-column"><img src="' + this.ImgUrl + '" alt="" class="img-cap img-responsive"></div></a></div>';
        });
        //$('#listPhotos').find('#divClear').prepend(str);
        $('#divClear').prepend(str);
    }
</script>

